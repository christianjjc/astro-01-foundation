---
import CustomTitle from '../components/CustomTitle.astro';
import MainLayout from '../layouts/MainLayout.astro';

const name = 'Christian Jim√©nez | Home';
---

<MainLayout title={name}>
    <CustomTitle title={name} />
    <p>Momento actual:{new Date().toLocaleTimeString()}</p>
    <p id="realTime"></p>
</MainLayout>

<script>
    const currentYear: number = new Date().getFullYear();
    const footer = document.querySelector('footer') as HTMLElement;
    const pRealTime = document.querySelector('#realTime') as HTMLElement;
    footer.innerHTML = `<hr>Current Year: ${currentYear}`;
    const cambiaHora = () =>
        setInterval(() => {
            pRealTime.innerHTML = `Real Momment: ${new Date().toLocaleTimeString()}`;
        }, 1000);
    cambiaHora();
</script>
